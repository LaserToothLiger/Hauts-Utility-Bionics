<Defs>

  <!--Gold-->
  <HediffDef ParentName="HVB_Kintsugi">
    <defName>HVB_GoldKintsugi</defName>
    <label>gold scar kintsugi</label>
    <description>This scar has been artfully imbued with gold-dust lacquer.</description>
    <stages>
      <li>
        <statOffsets>
          <PawnBeauty>0.4</PawnBeauty>
        </statOffsets>
		<multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
      </li>
    </stages>
  </HediffDef>
  <RecipeDef ParentName="HVB_InlayScar">
    <defName>HVB_LacquerScarWithGold</defName>
    <label>lacquer scar with gold</label>
    <description>Imbue a scar with gold-dust lacquer, enhancing the beauty of the subject. The larger the scar, the better the effect.</description>
    <descriptionHyperlinks><HediffDef>HVB_GoldKintsugi</HediffDef></descriptionHyperlinks>
    <jobString>Lacquering scar with gold.</jobString>
    <addsHediff>HVB_GoldKintsugi</addsHediff>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>1</count><!--since gold is "small", this translates to 10 gold in-game-->
      </li>
    </ingredients>
  </RecipeDef>
  
