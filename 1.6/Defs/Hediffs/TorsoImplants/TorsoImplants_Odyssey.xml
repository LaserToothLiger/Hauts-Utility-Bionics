  <!--starlight ability booster-->
  <HediffDef ParentName="ImplantHediffBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_StarpowerGland</defName>
    <label>starlight ability booster</label>
    <labelNoun>a starlight ability booster</labelNoun>
    <description>An installed starlight ability booster implant. While beyond the atmosphere, empowers other bionics, causing their abilities' cooldowns to recover faster.</description>
    <descriptionHyperlinks><ThingDef>HVB_StarpowerGland</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>HVB_StarpowerGland</spawnThingOnRemoved>
	<minSeverity>0.001</minSeverity>
    <initialSeverity>0.001</initialSeverity>
    <maxSeverity>1.001</maxSeverity>
    <stages>
      <li>
        <minSeverity>0.001</minSeverity>
		<label>inactive</label>
	  </li>
	  <li>
        <minSeverity>1.001</minSeverity>
		<label>active</label>
      </li>
    </stages>
    <comps>
	  <li Class="HautsFramework.HediffCompProperties_PlanetLayerSeverity">
		<defaultSeverity>0.001</defaultSeverity>
		<setToInLayer>
			<li><key>Orbit</key><value>1.001</value></li>
		</setToInLayer>
	  </li>
	  <li Class="HautsFramework.HediffCompProperties_AbilityCooldownModifier">
		<increasedCooldownRecovery>0.5</increasedCooldownRecovery>
		<affectsAllBionicAbilities>true</affectsAllBionicAbilities>
		<multiplyBySeverity>true</multiplyBySeverity>
	  </li>
    </comps>
  </HediffDef>
  <ThingDef ParentName="BodyPartBionicBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_StarpowerGland</defName>
    <label>starlight ability booster</label>
    <description>This bionic gland absorbs forms of stellar radiation which are not present within Earth-like atmospheres, and therefore only functions once in space. It channels this energy into other bionics to make their abilities' cooldowns recover faster.</description>
    <descriptionHyperlinks><RecipeDef>HVB_InstallStarpowerGland</RecipeDef></descriptionHyperlinks>
    <techHediffsTags Inherit="False"><li>HVB_SpaceBionic</li></techHediffsTags>
    <costList>
      <Plasteel>15</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <statBases>
      <MarketValue>1030</MarketValue>
    </statBases>
  </ThingDef>
  <RecipeDef ParentName="SurgeryInstallImplantBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_InstallStarpowerGland</defName>
    <label>install starlight ability booster</label>
    <description>Install a starlight ability booster.</description>
    <descriptionHyperlinks>
      <ThingDef>HVB_StarpowerGland</ThingDef>
      <HediffDef>HVB_StarpowerGland</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing starlight ability booster.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HVB_StarpowerGland</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>HVB_StarpowerGland</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>HVB_StarpowerGland</addsHediff>
  </RecipeDef>
  <RecipeDef ParentName="SurgeryRemoveImplantBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_RemoveStarpowerGland</defName>
    <label>remove starlight ability booster</label>
    <description>Remove starlight ability booster.</description>
    <descriptionHyperlinks>
      <ThingDef>HVB_StarpowerGland</ThingDef>
      <HediffDef>HVB_StarpowerGland</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing starlight ability booster.</jobString>
    <removesHediff>HVB_StarpowerGland</removesHediff>
  </RecipeDef>
  
  <!--vacuumfoam gland-->
  <HediffDef ParentName="ImplantHediffBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_VacuumfoamGland</defName>
    <label>vacuumfoam gland</label>
    <labelNoun>an installed vacuumfoam gland</labelNoun>
    <description>An installed vacuumfoam gland implant. Grants rapidly increasing vacuum resistance while in vacuum, at the expense of also hindering move speed. The foam slowly decays once back in an atmosphere.</description>
    <descriptionHyperlinks><ThingDef>HVB_VacuumfoamGland</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>HVB_VacuumfoamGland</spawnThingOnRemoved>
	<minSeverity>0.001</minSeverity>
	<initialSeverity>0.001</initialSeverity>
	<maxSeverity>1</maxSeverity>
    <stages>
      <li>
        <statOffsets>
		  <VacuumResistance>1</VacuumResistance>
		  <MoveSpeed>-1.5</MoveSpeed>
          <ComfyTemperatureMin>-30</ComfyTemperatureMin>
        </statOffsets>
		<multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
      </li>
    </stages>
	<comps>
      <li Class="HautsFramework.HediffCompProperties_VacuumSeverity">
        <perTickInVacuum>0.01</perTickInVacuum>
		<perTickNotInVacuum>-0.001</perTickNotInVacuum>
		<vacuumThreshold>0.1</vacuumThreshold>
		<freezeAtVacuumImmunityInVacuum>true</freezeAtVacuumImmunityInVacuum>
      </li>
	</comps>
  </HediffDef>
  <ThingDef ParentName="BodyPartBionicBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_VacuumfoamGland</defName>
    <label>vacuumfoam gland</label>
    <description>This artificial organ secretes a protective layer of foam through the sweat pores when exposed to the vacuum of space, protecting the host at the expense of hampering its movements. Foam production stops - and existing foam begins to slough off - when the host is placed back into a non-vacuum environment.\n\n(The initial stats displayed are those of the maximum foam output.)</description>
    <descriptionHyperlinks><RecipeDef>HVB_InstallVacuumfoamGland</RecipeDef></descriptionHyperlinks>
    <techHediffsTags Inherit="False"><li>HVB_SpaceBionic</li></techHediffsTags>
    <costList>
      <Plasteel>12</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <statBases>
      <MarketValue>830</MarketValue>
    </statBases>
    <thingSetMakerTags><li>HVB_MiscCoolItems</li><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <recipeMaker>
      <researchPrerequisite>HVB_SurvivalAdaptations</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <RecipeDef ParentName="SurgeryInstallImplantBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_InstallVacuumfoamGland</defName>
    <label>install vacuumfoam gland</label>
    <description>Install a vacuumfoam gland.</description>
    <descriptionHyperlinks>
      <ThingDef>HVB_VacuumfoamGland</ThingDef>
      <HediffDef>HVB_VacuumfoamGland</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing vacuumfoam gland.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HVB_VacuumfoamGland</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>HVB_VacuumfoamGland</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>HVB_VacuumfoamGland</addsHediff>
  </RecipeDef>
  <RecipeDef ParentName="SurgeryRemoveImplantBase" MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>HVB_RemoveVacuumfoamGland</defName>
    <label>remove vacuumfoam gland</label>
    <description>Remove vacuumfoam gland.</description>
    <descriptionHyperlinks>
      <ThingDef>HVB_VacuumfoamGland</ThingDef>
      <HediffDef>HVB_VacuumfoamGland</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing vacuumfoam gland.</jobString>
    <removesHediff>HVB_VacuumfoamGland</removesHediff>
  </RecipeDef>
  
  
  
  
