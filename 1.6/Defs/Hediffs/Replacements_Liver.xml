	  <li Class="HautsFramework.HediffCompProperties_GeneticResourceModifiers">
		<maxResourceOffsets>
			<li>
				<key>hemogen</key>
				<value>1.2</value>
			</li>
		</maxResourceOffsets>
	  </li>
    </comps>
  </HediffDef>
