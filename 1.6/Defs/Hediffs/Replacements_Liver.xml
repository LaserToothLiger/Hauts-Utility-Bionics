	  <li>
	    <statOffsets>
		  <EBSG_HemogenMaxOffset MayRequire="EBSG.Framework">1.2</EBSG_HemogenMaxOffset>
		</statOffsets>
	  </li>
	</stages>
    <addedPartProps>
      <solid>true</solid>
	  <partEfficiency>1.25</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
