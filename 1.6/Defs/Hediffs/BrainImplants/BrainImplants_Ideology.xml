    <descriptionHyperlinks><RecipeDef>HVB_InstallArchotechWorshipDrive</RecipeDef></descriptionHyperlinks>
    <statBases>
      <MarketValue>1900</MarketValue>
    </statBases>
    <thingSetMakerTags>
