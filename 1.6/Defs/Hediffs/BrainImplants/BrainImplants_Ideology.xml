    </descriptionHyperlinks>
    <jobString>Installing theologic work driver.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HVB_TheologicWorkDriver</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>HVB_TheologicWorkDriver</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>HVB_TheologicWorkDriver</addsHediff>
